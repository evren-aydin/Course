@using Course1.Models
@model Candidate

<h1 class="display-6 mb-4 mt-4">Apply</h1>

<form method="post" asp-action="Apply">
    <div class="form-group my-4">
        <label asp-for="Email">Email</label>
        <input  asp-for="Email" type="Email" class="form-control">
    </div>
    <div class="form-group my-4">
        <label asp-for="FirstName">Firstname</label>
        <input asp-for="FirstName" class="form-control">
    </div>
    <div class="form-group my-4">
        <label asp-for="LastName">Lastname</label>
        <input asp-for="LastName" class="form-control">
    </div>
    <div class="form-group my-4">
        <label asp-for="Age"></label>
        <select asp-for="Age" id="">
            <option value="18">18</option>
            <option value="19">19</option>
            <option value="20">20</option>
            <option value="21">21</option>
            <option value="22">22</option>
            <option value="23">23</option>
            <option value="24">24</option>
        </select>
    </div>

    <fieldset>
        <legend>Select One Course</legend>
        <p>
            <input type="radio" asp-for="SelectedCourse" id="mvc1" value="ASP.NET Core MVC">
            <label for="mvc1">ASP.NET Core MVC</label>
        </p>
        <p>
            <input type="radio" asp-for="SelectedCourse" id="mvc2" value="ASP.NET Core API">
            <label for="mvc2">ASP.NET Core API</label>
        </p>
        <p>
            <input type="radio" asp-for="SelectedCourse"id="mvc3" value="Blazor">
            <label for="mvc3">Blazor</label>
        </p>
    </fieldset>

    <div>
        <button asp-controller="Course" class="btn btn-primary" type="submit">Apply</button>
        <a href="/" class="btn btn-warning">Home</a>
    </div>

    

</form>